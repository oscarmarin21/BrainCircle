<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox prefHeight="166.0" prefWidth="307.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.braincircle.controlers.SugerenciasConectados">
    <children>
        <Pane prefHeight="195.0" prefWidth="83.0">
            <children>
                <ImageView fitHeight="76.0" fitWidth="77.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@img/user.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <VBox alignment="CENTER_LEFT" prefHeight="166.0" prefWidth="173.0" spacing="5.0">

                <Label fx:id="lblAutor" prefHeight="20.0" prefWidth="229.0" text="Autor:">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
            </VBox>
        </VBox>
        <Pane prefHeight="200.0" prefWidth="200.0">
            <children>
                    <Button fx:id="btnConect" contentDisplay="CENTER" lineSpacing="2.0" minHeight="26.0" minWidth="78.0" onAction="#Conectar" prefHeight="26.0" prefWidth="78.0" style="-fx-background-color: #c1ff72;" text="Conectar" textAlignment="CENTER" textFill="#010035">
                    <font>
                        <Font name="Candara" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnChat" layoutX="92.0" minHeight="26.0" minWidth="78.0" onAction="#Chat" prefHeight="26.0" prefWidth="66.0" style="-fx-background-color: #ff8080;" text="Chat" textFill="WHITE">
                    <font>
                        <Font name="Candara" size="14.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</HBox>