<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.braincircle.controlers.CrearSolicitudControlador">
   <children>
      <!-- Header -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#010035" height="54.0" layoutY="446.0" stroke="#010035" strokeType="INSIDE" width="600.0" />
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#c1ff72" height="7.0" layoutY="493.0" stroke="#c1ff72" strokeType="INSIDE" width="600.0" />
      
      <!-- Logo -->
      <ImageView fitHeight="34.0" fitWidth="46.0" layoutX="14.0" layoutY="453.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/logo7.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="34.0" fitWidth="200.0" layoutX="51.0" layoutY="456.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@img/logo6.png" />
         </image>
      </ImageView>
      
      <!-- Navigation Header -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#c1ff72" height="26.0" layoutX="-3.0" layoutY="-1.0" stroke="WHITE" strokeType="INSIDE" width="140.0" />
      <Label layoutX="15.0" layoutY="3.0" text="Nueva Solicitud" textFill="#010035">
         <font>
            <Font name="Candara Bold" size="14.0" />
         </font>
      </Label>
      
      <!-- Back Button -->
      <Button onAction="#volverASolicitudes" layoutX="480.0" layoutY="-2.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="100.0" style="-fx-background-color: #ffffff;-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #010035;" text="← Volver" textFill="#010035">
         <font>
            <Font name="Candara Bold" size="12.0" />
         </font>
      </Button>
      
      <!-- Line separator -->
      <Line endX="499.0" layoutX="101.0" layoutY="25.0" startX="-100.0" stroke="#010035" />
      
      <!-- Title Section -->
      <Label layoutX="70.0" layoutY="60.0" text="📝 Título de la Solicitud" textFill="#010035">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtTitulo" layoutX="70.0" layoutY="85.0" prefHeight="35.0" prefWidth="460.0" promptText="Ingrese un título descriptivo (máx. 100 caracteres)" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;">
         <font>
            <Font name="Candara" size="12.0" />
         </font>
      </TextField>
      
      <!-- Priority Section -->
      <Label layoutX="70.0" layoutY="140.0" text="⚡ Nivel de Prioridad" textFill="#010035">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <ComboBox fx:id="cmbPrioridad" layoutX="70.0" layoutY="165.0" prefHeight="35.0" prefWidth="200.0" promptText="Seleccione la prioridad" style="-fx-background-radius: 8; -fx-border-radius: 8;" />
      
      <!-- Message Section -->
      <Label layoutX="70.0" layoutY="220.0" text="💬 Mensaje de la Solicitud" textFill="#010035">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextArea fx:id="txtMensaje" layoutX="70.0" layoutY="245.0" prefHeight="120.0" prefWidth="460.0" promptText="Describa detalladamente su solicitud (máx. 500 caracteres)" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc;" wrapText="true">
         <font>
            <Font name="Candara" size="12.0" />
         </font>
      </TextArea>
      
      <!-- Status Message -->
      <Label fx:id="lblMensajeEstado" alignment="CENTER" layoutX="70.0" layoutY="380.0" prefHeight="20.0" prefWidth="460.0" textAlignment="CENTER">
         <font>
            <Font name="Candara Bold" size="12.0" />
         </font>
      </Label>
      
      <!-- Buttons Section -->
      <Button fx:id="btnCancelar" onAction="#cancelar" layoutX="190.0" layoutY="410.0" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #ffffff; -fx-border-color: #010035; -fx-background-radius: 10; -fx-border-radius: 10;" text="Cancelar" textFill="#010035">
         <font>
            <Font name="Candara Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnCrear" onAction="#crearSolicitud" layoutX="330.0" layoutY="410.0" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #010035; -fx-background-radius: 10; -fx-border-radius: 10;" text="Crear Solicitud" textFill="#c1ff72">
         <font>
            <Font name="Candara Bold" size="14.0" />
         </font>
      </Button>
      
      <!-- Decorative Elements -->
      <Circle fill="#c1ff72" layoutX="570.0" layoutY="60.0" opacity="0.3" radius="15.0" />
      <Circle fill="#010035" layoutX="30.0" layoutY="80.0" opacity="0.1" radius="8.0" />
      <Circle fill="#c1ff72" layoutX="570.0" layoutY="400.0" opacity="0.2" radius="12.0" />
      
   </children>
</AnchorPane> 