<HBox prefHeight="130.0" prefWidth="240.0" style="-fx-border-color: #c1ff72; -fx-background-color: #ffffff;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.braincircle.controlers.PublicacionesPagControlador">
    <children>
        <ImageView fx:id="imgAutor" fitHeight="92.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true"/>
        <VBox spacing="5.0">
            <Label fx:id="lblTitulo" text="Título:"/>
            <Label fx:id="lblTema" text="Tema:"/>
            <Label fx:id="lblAutor" text="Autor:"/>
            <Button fx:id="btnVerMas" text="Ver más" onAction="#abrirDetalles"/>
        </VBox>
    </children>
</HBox>

