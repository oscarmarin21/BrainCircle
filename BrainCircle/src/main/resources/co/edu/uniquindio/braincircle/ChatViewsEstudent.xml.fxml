<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.braincircle.controlers.ChatControlador"
            prefHeight="400.0" prefWidth="600.0">
    <ListView fx:id="listaMensajes" prefHeight="250.0" layoutY="30.0"/>
    <HBox spacing="10">
        <TextField fx:id="campoMensaje" HBox.hgrow="ALWAYS" promptText="Escribe un mensaje..."/>
        <Button text="Enviar" onAction="#enviarMensaje"/>
    </HBox>
</AnchorPane>
